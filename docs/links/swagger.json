{
  "swagger": "2.0",
  "info": {
    "description": "API documentation for Links service",
    "version": "1.0",
    "title": "Links API Documentation",
    "termsOfService": "Terms of service",
    "contact": {
      "name": "JujaLabs",
      "url": "https://juja.com.ua/",
      "email": "info@juja.com.ua"
    },
    "license": {
      "name": "Apache License Version 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "links-controller",
      "description": "Links Controller"
    }
  ],
  "paths": {
    "/v1/links": {
      "get": {
        "tags": [
          "links-controller"
        ],
        "summary": "Get all links",
        "description": "Returns a list containing saved links. The list supports paging.",
        "operationId": "getAllLinksUsingGET",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/LinkRequestResponse"
            }
          },
          "404": {
            "description": "Links not found but may be available in the future."
          },
          "500": {
            "description": "Unexpected error."
          }
        }
      },
      "post": {
        "tags": [
          "links-controller"
        ],
        "summary": "Save a link",
        "description": "Adds a new link to the links list.",
        "operationId": "saveLinkUsingPOST",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "link",
            "description": "Link to be updated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SaveLinkRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Link successfully has been saved.",
            "schema": {
              "$ref": "#/definitions/LinkRequestResponse"
            }
          },
          "400": {
            "description": "Link has not been saved."
          },
          "500": {
            "description": "Unexpected error."
          }
        }
      }
    }
  },
  "definitions": {
    "LinkRequestResponse": {
      "description": "A JSON object containing link`s information",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "link`s ID at database"
        },
        "user": {
          "type": "string",
          "description": "the user which saved the link"
        },
        "url": {
          "type": "string",
          "description": "the link been saved before"
        },
        "archived": {
          "type": "boolean",
          "description": "archived links are not visible to users"
        }
      },
      "example": {
        "id": 100500,
        "user": "asdfa64839412",
        "url": "https://swagger.io/docs/specification/describing-request-body/",
        "archived": false
      }
    },
    "SaveLinkRequest": {
      "description": "A JSON object containing link`s information, has no ID before it`s saved, every just saved link is not archived by default, so there is no id & active fields",
      "type": "object",
      "properties": {
        "user": {
          "type": "string",
          "description": "the user which is saving the link"
        },
        "url": {
          "type": "string",
          "description": "the link being saved"
        }
      },
      "example": {
        "user": "asdfa64839412",
        "url": "https://swagger.io/docs/specification/describing-request-body/"
      }
    }
  }
}